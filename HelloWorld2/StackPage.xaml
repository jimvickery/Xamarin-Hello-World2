<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    BackgroundColor="#020231"
    Padding="0, 20, 0, 0"
    xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HelloWorld2.StackPage">
   <StackLayout VerticalOptions="Center" Spacing="20">
        <Label 
            Text="Welcome to SillySnap"
            TextColor="White"
            FontSize="30" 
            FontAttributes="Bold"  
            HorizontalOptions="Center" />
        <Label 
            Text="Making Images Fun and Social" 
            TextColor="White"
            FontSize="18" 
            HorizontalOptions="Center" />
        <Button 
            Text="Login" 
            TextColor="White"
            BackgroundColor="#323299" />
        <Button 
            Text="Register" 
            TextColor="White"
            BackgroundColor="#323299" />
    </StackLayout>  

</ContentPage>
